{
  "form": {
    "fields": [{ "placeholder": "عنوان المهمة" }, { "placeholder": "وصف المهمة" }],
    "dropdowns": [
      { "id": "subject", "placeholder": "اختر المادة", "options": ["اللغة العربية","اللغة الانكليزية","الحاسوب"] },
      { "id": "date", "placeholder": "اختر التاريخ", "dynamic": "next_7_days" },
      { "id": "gov", "placeholder": "اختر المحافظة", "options": ["دمشق","حلب"] },
      {
        "id": "center",
        "placeholder": "اختر المركز",
        "depends_on": ["subject","gov"],
        "options_map": {
          "اللغة العربية": { "دمشق": ["مركز 1"], "حلب": ["مركز 2"] },
          "الحاسوب": { "دمشق": ["Tech 1"], "حلب": [] }
        },
        "fallback": []
      }
    ]
  }
}
